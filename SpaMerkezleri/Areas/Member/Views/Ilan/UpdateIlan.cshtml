
@model IlanModel


@{
    ViewData["Title"] = "UpdateIlan";
    Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<h1>İlan Güncelleme Sayfası</h1>

<link rel="stylesheet" href="~/css/form.css" />

<div class="container-fluid">
    <div class="container">
        <!-- Title -->
        <div class="d-flex justify-content-between align-items-lg-center py-3 flex-column flex-lg-row">
            <h2 class="h5 mb-3 mb-lg-0">İlanı Güncelle</h2>
            <div class="hstack gap-3">
            </div>
        </div>

        <form method="post" class="validate-form" enctype="multipart/form-data">
            <input type="hidden" asp-for="ilanDate" value="@Model.ilanDate" />
            <div class="row">
                <!-- Left side -->
                <div class="col-lg-12">
                    <!-- Basic information -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="h6 mb-4">İlan Bilgileri</h3>
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label class="form-label">İlan Başlığı</label>
                                        <input type="text" class="form-control" asp-for="IlanBasligi" required>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label class="form-label">Şirket Adı</label>
                                        <input type="text" class="form-control" asp-for="IlanYeri" required>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label class="form-label">Telefon Numarası</label>
                                        <input type="text" class="form-control" asp-for="İlanTelefonNo" required>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label class="form-label">İlan Çeşidi</label>
                                        <select class="form-control select2" id="ilanCesidi" asp-for="IlanCesidi" required>
                                            <option>Seçiniz</option>
                                            @foreach (var tip in ViewBag.IlanTipleri)
                                            {
                                                <option value="@tip">@tip</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="h6 mb-4">Konum Bilgileri</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Açık Adres</label>
                                        <textarea type="text" class="form-control" rows="6" placeholder="Açık adresiinizi buraya yazınız..." asp-for="İlanKonumu"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Resim Seç</label>
                                        <input type="file" class="form-control custom-file-input" asp-for="Image" />
                                    </div>
                                    <div class="mb-2">
                                        <img src="~/IlanImage/@Model.ImagePath" class="img-fluid" id="thumbnail" style="height:100px;" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="h6 mb-4">
                                İlan İçeriği
                            </h3>
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <textarea type="text" id="richEditor" class="form-control" rows="8" placeholder="ilanın içeriğini buraya yazınız..." asp-for="İlanAcikklamasi"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <div class="col-lg-3 mx-4">
                        <div class="card mb-4">
                            <div class="card-body px-5">
                                <div class="row">
                                    <input type="submit" value="GÜNCELLE" class="btn btn-primary btn-block">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="card mb-4">
                            <div class="card-body px-5">
                                <div class="row">
                                    <a href="/Member/Ilan/Index/" class="btn btn-danger btn-block">İPTAL</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" charset="utf-8" src="~/js/myFunction.js"></script>
}


