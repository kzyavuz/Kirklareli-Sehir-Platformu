@model SpaMerkezleri.Models.UserRegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <title>Kullanıcı Kayıt Sayafası</title>

</head>
<body>

    <div class="wrapper fadeInDown">
        <h3 class="my-4" style="color: #56baed;">1. Adım Siteye Kayıt</h3>
        <div id="formContent">
            <form asp-action="MSignUp" method="post">
                <!-- Hidden input to carry returnUrl -->
                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                <div class="form-group mt-3">
                    <input type="text" id="name" class="fadeIn second" asp-for="name" placeholder="Ad Soyad" required>
                </div>
                <div class="form-group">
                    <input type="email" id="email" class="fadeIn second" asp-for="Email" placeholder="Mail" required>
                </div>
                <div class="form-group">
                    <input type="text" id="username" class="fadeIn second" asp-for="UserName" placeholder="Kullanıcı Adı" required>
                </div>

                <div class="form-group">
                    <input type="text" id="phoneNumber" class="fadeIn second"  asp-for="PhoneNumber"
                           placeholder="90 (5**) *** ** ** formatında yazınız"
                           required>
                </div>

                <div class="form-group">
                    <input type="password" id="password" class="fadeIn third" asp-for="Password" placeholder="Şifre" required>
                    <small class="form-text text-muted">
                    </small>
                </div>
                <div class="form-group">
                    <input type="password" id="confirmPassword" class="fadeIn third" asp-for="ConfirmPassword" placeholder="Şifre Tekrarı" required>
                </div>

                <input type="submit" class="fadeIn fourth my-3" value="Devam Et →">

                <div class="form-group">
                    <p class="mx-5" style="text-align: center; color: #56baed;"> Zaten bir hesabınız varsa direkt olarak giriş yaparak ilan yayınlıyabilirsiniz!</p>
                </div>

                <div class="text-center mb-4 mt-2">
                    <a href="/Member/MemberLogin/MSignIn/" style="color: #56baed; text-align:center; font-weight:bold; text-decoration:none;">→ Giriş Yap</a>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        document.getElementById('phoneNumber').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (e.inputType === 'deleteContentBackward') {
                e.target.value = value;
            } else {
                if (value.length > 0) {
                    value = value.replace(/^(\d{2})(\d{0,3})(\d{0,3})(\d{0,2})(\d{0,2}).*/, '$1 ($2) $3 $4 $5');
                }
                e.target.value = value;
            }
        });

    </script>
</body>
</html>
