@model List<AppRole>
@{
    ViewData["Title"] = "Rol İşlemleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}

<h1>Rol İşlemleri</h1>



<div class="table-responsive">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
                <th>Rolü Sil</th>
                <th>Rolü Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Name</td>
                    <td><a href="/Admin/Rol/DeleteRole/@item.Id" class="btn btn-danger">Rolü Sil</a></td>
                    <td><a href="/Admin/Rol/UpdateRole/@item.Id" class="btn btn-warning">Rolü Güncelle</a></td>
                </tr>
                i++;
            }
        </table>
    }
    else
    {
        <div class="alert alert-danger">
            <h4 class="text-danger text-center">Herhangi bir rol bulunamadı</h4>
        </div>
    }

    <a href="/Admin/Rol/CreateRol/" class="btn btn-primary">Yeni Rol Olustur</a>
</div>
