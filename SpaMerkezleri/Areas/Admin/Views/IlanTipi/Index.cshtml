@model IEnumerable<IlanFormIsletmeler>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 1;
}

<h1>İlan Tipleri</h1>

<a class="btn btn-success mb-3" href="/Admin/IlanTipi/AddIlanTipi">İlan Tipi Ekle</a>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Ilan Tipi</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@sayac</td>
                <td>@item.Name</td>
                <td><a class="btn btn-warning" href="/Admin/IlanTipi/UpdateIlanTipi/@item.ID">Güncelle</a></td>
                <td>
                    <form asp-controller="IlanTipi" asp-action="DeleteIlanTipi" asp-route-id="@item.ID" onsubmit="return confirm('İlan tipini silmek iştediğinize eminmisiniz')">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
            sayac++;
        }
    </table>
</div>