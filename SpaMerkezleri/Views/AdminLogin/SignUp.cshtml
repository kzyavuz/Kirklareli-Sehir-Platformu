
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Admin Kayıt Sayafası</title>

</head>
<body>

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="/site/login.png" id="icon" alt="User Icon" />
            </div>

            <form method="post">
                <input type="text" id="login" class="fadeIn second" name="UserName" placeholder="Kullanıcı Adı">

                <input type="text" id="password" class="fadeIn third" name="Password" placeholder="Sifre">

                <input type="text" id="password" class="fadeIn third" name="ConfirmPassword" placeholder="Sifre Tekrarı">

                <input type="submit" class="fadeIn fourth my-3" value="Oluştur">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>

        </div>
    </div>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
</body>
</html>
